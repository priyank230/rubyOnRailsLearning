<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article%>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article, class: "shadow bg-info mb-3 p-3 rounded" , local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.text_area :description, rows:10 , class: "form-control shadow rounded", placeholder: "Description of article"%>
                    </div>
                </div>
                
                <div class="form-group row mt-2">
                    <%= f.label :category, class: "col-2 col-form-label text-light" %>
                    <div class="col mt-2">
                        <%= f.collection_select(:category_ids, Category.all, :id, :name,
                        { prompt: "Select all relevant categories"}, { multiple: true, size: 3, class: "form-select shadow rounded"})%>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg mt-2" %>
                </div>
            <% end %>
        </div>
        <div class="col-4 d-flex justify-content-center text-info mb-3">
            <%= link_to '[ Cancel and Return to Articles listing page ]', articles_path %>
        </div>
    </div>
</div>