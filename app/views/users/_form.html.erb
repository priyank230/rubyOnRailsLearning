<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user%>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @user, class: "shadow bg-info mb-3 p-3 rounded" , local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
                    </div>
                </div>
                
                <div class="form-group row mt-2">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <%= f.submit (@user.new_record? ? "Sign up": "Update Account"), class: "btn btn-outline-light btn-lg mt-2" %>
                </div>
            <% end %>
        </div>
        <div class="col-4 d-flex justify-content-center text-info mb-3">
            <%= link_to '[ Cancel and Return to Home page ]', root_path %>
        </div>
    </div>
</div>