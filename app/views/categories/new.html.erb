<h1 class="text-center pt-4">Create Category</h1>
<hr>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category%>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @category, class: "shadow bg-info mb-3 p-3 rounded" , local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg mt-2" %>
                </div>
            <% end %>
        </div>
        <div class="col-4 d-flex justify-content-center text-info mb-3">
            <%= link_to '[ Cancel and Return to Home page ]', root_path %>
        </div>
    </div>
</div>