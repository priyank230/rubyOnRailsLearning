
<h1 class="text-center pt-4">Categories</h1>
<hr>
<div class="container pb-4">
    <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-body">
                    <div class="card-title">
                        <h5><%= link_to category.name, category_path(category), class: "text-success" %></h5>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        Created <%= time_ago_in_words(category.created_at) %> ago,
                        edited <%= time_ago_in_words(category.updated_at) %> ago
                    </small>
                </div>
                </div>
            </div>
        </div>
    <%end%>
</div>