<h1 class="text-center pt-4">Login</h1>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
                    </div>
                </div>
                
                <div class="form-group row mt-2">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
                    </div>
                </div>

                <div class="form-group d-flex justify-content-center">
                    <%= f.submit 'Login', class: "btn btn-outline-light btn-lg mt-2" %>
                </div>
            <% end %>
        </div>
        <div class="col-4 d-flex justify-content-center text-info mb-3">
            <%= link_to '[ Cancel and Return to Home page ]', root_path %>
        </div>
    </div>
</div>